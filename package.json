{
	"name": "miqro.js",
	"version": "0.2.1",
	"description": "Minimal, high-performance microservice engine.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"miqro": "dist/cli.js",
		"miqro.js": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rm -rf dist && bun build src/index.ts src/cli.ts --target=bun --outdir=dist && tsc",
		"test": "bun test",
		"lint": "biome check .",
		"format": "biome format --write .",
		"check": "biome check --write --unsafe --max-diagnostics none && tsc --noEmit"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/bun": "latest",
		"@types/node-cron": "^3.0.11",
		"typescript": "^5",
		"zod": "^3.24.1"
	},
	"peerDependencies": {
		"hono": "^4.12.2",
		"zod": "^3.0.0"
	},
	"dependencies": {
		"hono": "^4.12.2",
		"node-cron": "^4.2.1"
	}
}
